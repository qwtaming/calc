<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.calc.MainActivity">

    <EditText
        android:id="@+id/edt"
        android:gravity="right"
        android:cursorVisible="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/num1"
            android:text="1"
            android:layout_width="200px"
            android:layout_height="124px"/>
        <Button
            android:id="@+id/num2"
            android:layout_toRightOf="@+id/num1"
            android:text="2"
            android:layout_width="200px"
            android:layout_height="124px"/>
        <Button
            android:id="@+id/num3"
            android:layout_toRightOf="@+id/num2"
            android:text="3"
            android:layout_width="200px"
            android:layout_height="124px"/>
        <Button
            android:id="@+id/num4"
            android:layout_below="@+id/num1"
            android:text="4"
            android:layout_width="200px"
            android:layout_height="124px"/>
        <Button
            android:id="@+id/num5"
            android:layout_toRightOf="@+id/num4"
            android:layout_below="@+id/num2"
            android:text="5"
            android:layout_width="200px"
            android:layout_height="124px"/>
        <Button
            android:id="@+id/num6"
            android:layout_toRightOf="@+id/num5"
            android:layout_below="@+id/num3"
            android:text="6"
            android:layout_width="200px"
            android:layout_height="124px"/>
        <Button
            android:id="@+id/num7"
            android:layout_below="@+id/num4"
            android:text="7"
            android:layout_width="200px"
            android:layout_height="124px"/>
        <Button
            android:id="@+id/num8"
            android:layout_toRightOf="@+id/num7"
            android:layout_below="@+id/num5"
            android:text="8"
            android:layout_width="200px"
            android:layout_height="124px"/>
        <Button
            android:id="@+id/num9"
            android:layout_toRightOf="@+id/num8"
            android:layout_below="@+id/num6"
            android:text="9"
            android:layout_width="200px"
            android:layout_height="124px"/>
        <Button
            android:id="@+id/num0"
            android:layout_below="@+id/num7"
            android:text="0"
            android:layout_width="200px"
            android:layout_height="248px"/>
        <Button
            android:id="@+id/num_dot"
            android:layout_toRightOf="@+id/num0"
            android:layout_below="@+id/num8"
            android:text="."
            android:layout_width="200px"
            android:layout_height="124px"/>

        <Button
            android:id="@+id/num_add"
            android:layout_toRightOf="@+id/num3"
            android:text="+"
            android:layout_width="200px"
            android:layout_height="124px"/>
        <Button
            android:id="@+id/num_sub"
            android:layout_toRightOf="@+id/num6"
            android:layout_below="@+id/num3"
            android:text="-"
            android:layout_width="200px"
            android:layout_height="124px"/>

        <Button
            android:id="@+id/num_mul"
            android:layout_toRightOf="@+id/num9"
            android:layout_below="@+id/num_sub"
            android:text="*"
            android:layout_width="200px"
            android:layout_height="124px"/>

        <Button
            android:id="@+id/numc"
            android:layout_toRightOf="@+id/num_dot"
            android:layout_below="@+id/num9"
            android:text="c"
            android:layout_width="200px"
            android:layout_height="124px"/>
        <Button
            android:id="@+id/num_div"
            android:layout_toRightOf="@+id/numc"
            android:layout_below="@+id/num_mul"
            android:text="/"
            android:layout_width="200px"
            android:layout_height="124px"/>
        <Button
            android:id="@+id/num_back"
            android:layout_toRightOf="@+id/num_sum"
            android:layout_below="@+id/num_div"
            android:text="back"
            android:layout_width="200px"
            android:layout_height="124px"/>
        <Button
            android:id="@+id/num_sum"
            android:layout_toRightOf="@+id/num0"
            android:layout_below="@+id/num_dot"
            android:text="="
            android:layout_width="400px"
            android:layout_height="124px"/>

    </RelativeLayout>
</LinearLayout>
